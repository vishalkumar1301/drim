<div class="modal fade" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="commentModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="commentModalHeader">comments</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <div id="modalCommentsContainer">

          </div>
          <form id="commentModalForm">
              <div class="form-group row">
                  <!-- <label for="example-text-input" class="col-2 col-form-label">comment</label> -->
                  <div class="col-10">
                    <input class="form-control" type="text" id="commentModalTextInput" placeholder="enter comment here">
                  </div>
                  <button class="col-2 btn btn-primary" type="submit"><i class="fa fa-caret-right"></i></button>
              </div>
          </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
