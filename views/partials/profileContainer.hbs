<div class="card" id="profileContainer" username="{{anotherPersonUsername}}" user-id="{{userId}}">
  <div id="wallPaintingContainer">
    <img class="card-img-top" src="..." alt="">
  </div>
  <div class="card-block" id="profileContainerFooter">
    <div id="profileImage">
      <img class="p-i" src="" alt="">
    </div>
    <div class="row" id="profileContainerFooterContainer">
      <div class="col-md-5 colmar0" id="profileContainerFooterContainerLeft" >
        {{#if isUserSame}}
          <label class="profileContainerFooterContainerLeftElements" id="footerUsername">{{username}}</label>
        {{else}}
        <label class="profileContainerFooterContainerLeftElements" id="footerUsername">{{anotherPersonUsername}}</label>
          {{#if_eq followStatus 'following'}}
            <div class="dropdown profileContainerFooterContainerLeftElements" id="following">
              <button class="btn btn-secondary dropdown-toggle" type="button" id="followingButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                following
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" id="unfollow">unfollow</a>
              </div>
            </div>
          {{else}}
            <button class="btn btn-{{followStatusButtonType}} profileContainerFooterContainerLeftElements" user-id="{{userId}}" id="{{ followStatus}}">{{followStatus}}</button>
          {{/if_eq}}
        {{/if}}
      </div>
      <div class="col-md-2 colmar0"></div>
      <div class="col-md-5 colmar0" id="profileContainerFooterContainerRight">
        <label class="profileContainerFooterContainerRightElements">3M followers</label>
        {{#if isUserSame}}
        <div class="dropdown profileContainerFooterContainerRightElements">
          <button class="btn btn-secondary dropdown-toggle" type="button" id="profileEditing" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            edit <i class="fa fa-cog"></i>
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <div class="dropdown-item" id="editProfile" data-target="profilePicModal">edit profile pic</div>
            <div class="dropdown-item" id="editWallPainting">edit wall painting</div>
          </div>
          <!-- profile pic container-->
          <!-- Modal -->
          <div class="modal fade" id="profilePicModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">new post</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <form id="profilePicForm">
                  <!-- <input type="file" id="canvasFile" name="canvasFile" hidden="hidden"> -->
                  <div class="modal-body">
                    <textarea id="profilePicTextArea" placeholder="tell about sketch" name="profilePicTextArea" maxlength="10"></textarea>
                    <div id="profilePicCanvasContainer">
                    </div>
                    <div id="profilePicControlsContainer">
                      <div id="profilePicSecondaryControlsContainer"></div>
                      <div id="profilePicPrimaryControlsContainer">
                        <!-- <button type="button" id="startCameraButton" class="btn btn-primary">Take pic</button>
                        <button type="button" id="drawButton" class="btn btn-primary">Draw</button> -->
                      </div>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="submit" id="updateProfilePic" class="btn btn-primary" value="update profile"/>
                  </div>
                </form>
              </div>
            </div>
          </div>

          <!-- profile Pic container end -->

          <!-- wall painting container-->
          <!-- Modal -->
          <div class="modal fade" id="wallPaintingModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">new wall painting</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <form id="wallPaintingForm">
                  <!-- <input type="file" id="canvasFile" name="canvasFile" hidden="hidden"> -->
                  <div class="modal-body">
                    <textarea id="wallPaintingTextArea" placeholder="tell about wall painting" name="wallPaintingTextArea" maxlength="10"></textarea>
                    <div id="wallPaintingCanvasContainer">
                    </div>
                    <div id="wallPaintingControlsContainer">
                      <div id="wallPaintingSecondaryControlsContainer"></div>
                      <div id="wallPaintingPrimaryControlsContainer">
                        <!-- <button type="button" id="startCameraButton" class="btn btn-primary">Take pic</button>
                        <button type="button" id="drawButton" class="btn btn-primary">Draw</button> -->
                      </div>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="submit" id="updateWallPainting" class="btn btn-primary" value="update wall painting"/>
                  </div>
                </form>
              </div>
            </div>
          </div>

          <!-- wall painting container end -->
        </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>
