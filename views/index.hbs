<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Drim</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
        <link rel="stylesheet" href="/css/index.css" type="text/css">
        <link rel="stylesheet" href="/css/indexHeaderFooter.css" type="text/css">
    </head>

    <body>
        {{> header}}
        {{> message}}
        <div id="signinFormContainer">
            <div><label>Sign in</label></div>
            <form id="signinForm">
                <div><label>Username</label></div>
                <div><input type="text" id="username" name="username" placeholder="enter username" autofocus></div>
                <div><label>Password</label></div>
                <div><input type="password" id="password" name="password" placeholder="enter password"></div>
                <input type="submit" id="signinSubmitButton" name="signinSubmitButton" value="Sign in">
            </form>
        </div>
        {{> footer}}
        <script src="/socket.io/socket.io.js" type="text/javascript"></script>
        <script src="/js/libs/jQuery.js" type="text/javascript"></script>
        <script src="/js/signinValidation.js" type="text/javascript"></script>
        <script src="/js/index.js" type="text/javascript"></script>
        <script src="/js/footerAlignment.js" type="text/javascript"></script>
    </body>
</html>
